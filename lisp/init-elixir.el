(use-package elixir-mode
  :ensure t
  :defer t
  :config
    (global-leader
      :major-modes
      '(elixir-mode t)
      ;;and the keymaps:
      :keymaps
      '(elixir-mode-map)
      "=" 'elixir-format))


(use-package inf-elixir
  :ensure t
  :bind (("C-c i i" . 'inf-elixir)
         ("C-c i p" . 'inf-elixir-project)
         ("C-c i l" . 'inf-elixir-send-line)
         ("C-c i r" . 'inf-elixir-send-region)
         ("C-c i b" . 'inf-elixir-send-buffer)))

(provide 'init-elixir)
